<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Let package visibility find Termux for the "Open Termux" intent -->
    <queries>
        <package android:name="com.termux"/>
    </queries>

    <!-- Special permissions we will only *prompt* the user to grant in Settings -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Device capabilities (tight for now) -->
    <uses-feature android:name="android.hardware.vulkan.level" android:required="true"/>
    <uses-feature android:glEsVersion="0x00030000" android:required="true"/>
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:hasCode="true">

        <!-- Java UI activity -->
        <activity
            android:name="com.robotforest.launcher.MainActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:immersive="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|screenLayout|smallestScreenSize|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Keep NativeActivity available (black screen for now is expected) -->
        <activity
            android:name="android.app.NativeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"
            android:resizeableActivity="false"
            android:immersive="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|screenLayout|smallestScreenSize|uiMode">
            <meta-data android:name="android.app.lib_name" android:value="launcher"/>
        </activity>

    </application>
</manifest>
